# WhatsApp AI Chatbot Configuration

# Dialogflow Configuration
DIALOGFLOW_PROJECT_ID=your-project-id-here
DIALOGFLOW_LANGUAGE_CODE=id  # Default to Indonesian
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/dialogflow-credentials.json

# OpenAI (ChatGPT) Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=150

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your-sheets-id-here

# Optional Configurations
MAX_RETRIES=3           # Maximum retry attempts for API calls
RETRY_DELAY=1000        # Delay between retries in milliseconds (1 second)
DEBUG_MODE=false        # Enable/disable detailed logging
